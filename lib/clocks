(defparameter *clock-period* 10)
(defmacro make-clock (name &optional (clock-time *clock-period*))
    `(v_module ,name (
            (output clk)
        )
        (v_reg clk)
        (v_initial
            (v_= clk 0)
        )
        (v_always ()
            (v_delay ,(floor clock-time 2) nil)
            (v_= clk (v_! clk))
        )
    )
)
